<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/card_view_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用1"
            android:textColor="@color/day_main_bg"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_app_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_id"
            android:textColor="@color/day_main_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/text_app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/value_app_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/label_app_id"
            android:text="@string/app_id"
            android:textColor="#74747F"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/label_app_Secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_secret"
            android:textColor="@color/day_main_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/label_app_id"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/value_app_Secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/label_app_Secret"
            android:text="@string/app_secret"
            android:textColor="#74747F"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>



</android.support.v7.widget.CardView>