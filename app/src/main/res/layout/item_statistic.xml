<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/item_app_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="15c821df1e52"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_app_id"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:text="1553583956866160554"
        android:textColor="#74747F"
        android:textSize="12sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/item_order_id"
        android:background="#54545E" />

    <TextView
        android:id="@+id/item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_app_id"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/line1"
        android:text="￥60"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_order_id"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/line1"
        android:text="微信"
        android:textColor="#74747F"
        android:textSize="12sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/line1"
        android:layout_marginLeft="94dp"
        android:background="#54545E" />

    <TextView
        android:id="@+id/date_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line2"
        android:text="2019/03/04"
        android:layout_alignTop="@id/item_app_id"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line2"
        android:text="08:34:56"
        android:layout_alignTop="@id/item_from"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:textColor="#54545E"/>

</RelativeLayout>